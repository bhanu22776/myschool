
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="col-lg-8 col-lg-offset-2">
  
  <h2 align="center">Sign up</h2>
  <hr>
  <div class="col-lg-4"><%= f.label :name %></div>
  <div class="col-lg-8">
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="col-lg-4"><%= f.label :role %></div>
  <div class="col-lg-8">
  	<%= f.radio_button :role, 'student' %> 
		<%= f.label :role, 'Student', :value => 'student' %>
		<%= f.radio_button :role, 'staff' %>
		<%= f.label :role, 'Staff', :value => 'staff' %>
		<%= f.radio_button :role, 'parent' %>
		<%= f.label :role, 'Parent', :value => 'parent' %>
  </div>

  <div class="col-lg-4"><%= f.label :Image %></div>
  <div class="col-lg-8">
    <%= f.file_field :image %>
    <%= f.label :remote_image_url, "or image URL" %><br>
    <%= f.text_field :remote_image_url %>
  </div>

  <div class="col-lg-4"><%= f.label :email %></div>
  <div class="col-lg-8">
    <%= f.email_field :email %>
  </div>

  <div class="col-lg-4"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> chars min...)</i><% end %></div>
  <div class="col-lg-8">
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="col-lg-4"><%= f.label :password_confirmation %></div>
  <div class="col-lg-8">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="col-lg-4"><%= f.submit "Sign up" %></div>
  <div class="col-lg-8">Already Registered ? <%= render "devise/shared/links" %></div>
</div>
<% end %>

